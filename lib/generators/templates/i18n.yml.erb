<%= current_locale %>:
  activerecord:
    models:
      <%= model_name %>: <%= model_name_human %>
    attributes:
      <%= model_name %>:
        <%- max_column_length = columns.keys.map(&:length).max -%>
        <%- columns.each do |column, name| -%>
        <%= "#{column}: ".ljust(max_column_length + 2) %><%= name %>
        <%- end -%>
